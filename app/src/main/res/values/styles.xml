<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="RDNK.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Login" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/rdnkBlack</item>
        <item name="colorPrimaryDark">@color/rdnkBlack</item>
        <item name="colorAccent">@color/rdnkBlack</item>
    </style>

    <style name="Login.BackgroundImageView" parent="RDNK.WrapContent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/trophy</item>
    </style>

    <style name="Login.Title" parent="RDNK.TextView.TitleTextView">
        <item name="android:textAppearance">@style/FineCollege</item>
    </style>

    <!--FONTS-->
    <!--font_types_start-->
    <style name="FineCollege">
        <item name="fontPath">fonts/fine_college.ttf</item>
    </style>

</resources>
